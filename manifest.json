{
  "manifest_version": 3,
  "name": "WP New Post Watcher",
  "version": "1.0",
  "description": "Theo dõi bài viết mới từ nhiều website WordPress.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icon128.png"
  }
}
